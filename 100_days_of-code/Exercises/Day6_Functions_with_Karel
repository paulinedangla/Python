#Preview of the request :

def turn_right():
    turn_left()
    turn_left()
    turn_left()

def one_turn():
    move()
    turn_left()
    move()
    turn_right()
    move()
    turn_right()
    move()
    turn_left()

for step in range (6): 
    one_turn()
    
